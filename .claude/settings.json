      {
        "matcher": "Edit",
        "hooks": [{"type": "command", "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/block_obsidian_direct.sh"}]
      },
      {
        "matcher": "Write",
        "hooks": [{"type": "command", "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/block_obsidian_direct.sh"}]
      }
    ]
