      "Read(*)",
      "Edit(*)",
      "Write(*)",
      "Bash(git:*)",
      "Bash(python:*)",
      "Bash(poetry:*)",
      "Bash(pytest:*)",
      "Bash(pip:*)",
      "Bash(ls:*)",
      "Bash(rm:*)",
      "Bash(cat:*)"
